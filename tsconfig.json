{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2016",
    "module": "CommonJS",
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "./app.log", "husky/**/*"]
}
